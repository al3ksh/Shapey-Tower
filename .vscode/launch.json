{
  // Debugowanie shapeytower.exe z GDB (MinGW/MSYS2)
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ShapeyTower (gdb, Release)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/shapeytower.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "preLaunchTask": "cmake: build (Release)",
      "setupCommands": [
        {
          "description": "Włącz lepsze formatowanie dla GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug ShapeyTower (gdb, Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build-debug/shapeytower.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build-debug",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "preLaunchTask": "cmake: build (Debug)",
      "setupCommands": [
        {
          "description": "Włącz lepsze formatowanie dla GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
