{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ kompiluj aktywny plik",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Zadanie wygenerowane przez debuger."
        },
        {
            "label": "cmake: configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": []
        },
        {
            "label": "cmake: build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run shapeytower.exe",
            "type": "shell",
            "command": "${workspaceFolder}\\build\\shapeytower.exe",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "problemMatcher": []
        },
        {
            "label": "cmake: configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build-debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cmake: build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-debug",
                "--config",
                "Debug"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run shapeytower (Debug)",
            "type": "shell",
            "command": "${workspaceFolder}\\build-debug\\shapeytower.exe",
            "options": {
                "cwd": "${workspaceFolder}\\build-debug"
            },
            "problemMatcher": []
        },
        {
            "label": "cmake: install (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--install",
                "build",
                "--config",
                "Release",
                "--prefix",
                "${workspaceFolder}\\dist"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cpack: package (Release)",
            "type": "shell",
            "command": "cpack",
            "args": ["-C", "Release"],
            "options": { "cwd": "${workspaceFolder}\\build" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Release: build+package",
            "dependsOn": [
                "cmake: configure (Release)",
                "cmake: build (Release)",
                "cmake: install (Release)",
                "cpack: package (Release)"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo Release package ready"
        },
        {
            "label": "Run shapeytower (dist)",
            "type": "shell",
            "command": "${workspaceFolder}\\dist\\shapeytower.exe",
            "options": { "cwd": "${workspaceFolder}\\dist" },
            "problemMatcher": []
        }
    ]
}